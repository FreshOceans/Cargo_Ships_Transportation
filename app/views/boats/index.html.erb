<p id="notice"><%= notice %></p>

<h1>Boats Index</h1>

<%= link_to 'New Boat', new_user_boat_path(current_user.id) %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
          <p>Boat Name: <%=  boat.name %></p>
          <p>Current Port: <%=  boat.port_id %></p>
          <p>Capacity: <%=  boat.amount_of_containers %></p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
